#ifndef RESULTCRATE_H
#define	RESULTCRATE_H

#include "BinaryVector.h"


class ResultCrate {
public:
    ResultCrate(BinaryVector* startConfiguration, BinaryVector* result, unsigned int hammDistance, unsigned int hammWeight, bool existResult);
    virtual ~ResultCrate();

    void printResult();

    //GETTERS AND SETTERS-------------------------------------

    BinaryVector* GetResultVector() const {
        return result;
    }

    unsigned int GetHammingDistance() const {
        return hammingDistance;
    }

    unsigned int GetHammingWeight() const {
        return hammingWeight;
    }

    bool IsExistResult() const {
        return existResult;
    }

private:
    BinaryVector* result;
    unsigned int hammingDistance;
    unsigned int hammingWeight;
    bool existResult;   
    BinaryVector* startConfiguration;
};

#endif	/* RESULTCRATE_H */

