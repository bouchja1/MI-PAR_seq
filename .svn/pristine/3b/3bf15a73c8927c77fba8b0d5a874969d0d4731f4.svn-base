#ifndef TASKCRATE_H
#define	TASKCRATE_H

class TaskCrate {
public:
    TaskCrate(bool* resultingConfigurationArray, unsigned int width, unsigned int height, unsigned int itrations, unsigned int aMistake);
    virtual ~TaskCrate();

    unsigned int GetAMistake() const {
        return aMistake;
    }

    unsigned int GetHeight() const {
        return height;
    }

    unsigned int GetIterations() const {
        return iterations;
    }

    bool* IsResultingConfigurationArray() const {
        return resultingConfigurationArray;
    }

    unsigned int GetWidth() const {
        return width;
    }
private:
    bool* resultingConfigurationArray;
    unsigned int width;
    unsigned int height;
    unsigned int iterations;
    unsigned int aMistake;

};

#endif	/* TASKCRATE_H */

